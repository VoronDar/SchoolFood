<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="mainButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/rippleColor</item>
        <item name="android:background">@drawable/button_rounded_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:fontFamily">@font/heebo_black</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="secondButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@drawable/button_outlined_background</item>
        <item name="android:textColor">#426BBC</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:fontFamily">@font/heebo_black</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>



    <style name="first_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#fff000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:fontFamily">@font/heebo_black</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>


    <style name="title_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:fontFamily">@font/heebo_black</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">#000000</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_marginTop">80dp</item>
    </style>


    <style name="description_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">#@font/heebo_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>


    <style name="warning_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/heebo_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_marginBottom">200dp</item>
    </style>


    <style name="card_text_edit_holder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/strokeColor</item>
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>


    <style name="edit_text_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">16dp</item>

        <item name="android:fontFamily">@font/heebo_black</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:paddingBottom">22dp</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textColor">@color/colorMenuLabel</item>
        <item name="android:background">@color/textBackround</item>
        <item name="android:inputType">textVisiblePassword|textNoSuggestions|textCapSentences|textImeMultiLine</item>
    </style>


    <style name="block_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#1B213F</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>


    <style name="block_thing">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#CC3B4473</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

</resources>