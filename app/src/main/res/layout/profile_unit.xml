<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:layout_marginBottom="2dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id = "@+id/arrow"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="16dp"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src = "@drawable/ic_icon_arrow"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="32dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView
            style="@style/block_title"
            android:id="@+id/name"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:text="Ребенок:"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/block_thing"
            android:layout_weight="1"
            android:layout_marginTop="0dp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:id="@+id/name_info"
            android:layout_marginStart="50dp"
            android:text="Александра Сергеевна"
            />
        <ImageView
            android:id = "@+id/more_child"
            android:layout_width="27dp"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:src = "@drawable/button_more"
            android:layout_height="27dp"/>
    </LinearLayout>


</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:id = "@+id/school"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/block_title"
                android:text="Школа:"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                style="@style/block_thing"
                android:id="@+id/school_info"
                android:layout_marginStart="50dp"
                android:text="МБОУ г. Мурманска МПЛ"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id = "@+id/group"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/block_title"
                android:text="Класс:"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                style="@style/block_thing"
                android:layout_marginStart="50dp"
                android:id="@+id/group_info"
                android:text="4 В"
                />
        </LinearLayout>

        <Button
            style="@style/secondButton"
            android:id = "@+id/story"
            android:layout_gravity="end"
            android:text = "Последнее"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="0dp"
            />

        <Button
            style="@style/secondButton"
            android:id = "@+id/scedule"
            android:layout_gravity="end"
            android:visibility="gone"
            android:text = "Добавить ребенка"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="0dp"
            />
    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/third_place"
        android:background="#BEBEBE"
        android:layout_height="1dp"/>

</LinearLayout>

