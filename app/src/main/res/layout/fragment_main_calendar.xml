<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <com.google.android.material.card.MaterialCardView
        android:id = "@+id/place"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#66E1E4FF"
        app:contentPadding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                style="@style/edit_text_settings"
                android:layout_width="wrap_content"
                android:hint="Полдник"
                android:textColor="#C429407A"
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:padding = "5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id = "@+id/name"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:src = "@drawable/ic_arrow_drop_down_black_24dp"
                />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id = "@+id/help"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:elevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#CDD8FF"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="0dp"
        app:contentPadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">
        <View
            android:layout_width="18dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background= "@drawable/ic_icon_help"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:strokeWidth="1dp"
        app:strokeColor="#CDD8FF"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/help"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_height="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id = "@+id/monthPlace"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#D9E4FF"
            android:layout_height="40dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id = "@+id/month"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:fontFamily="@font/heebo_black"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text = "2021: Май"
                    />

                <ImageView
                    android:id = "@+id/more_details"
                    android:src = "@drawable/ic_icon_arrow"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/monthPlace">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text = "ПН"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/heebo_black"
                    android:textColor="#26356B"
                    android:textSize="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text = "ВТ"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/heebo_black"
                    android:textColor="#26356B"
                    android:textSize="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text = "СР"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/heebo_black"
                    android:textColor="#26356B"
                    android:textSize="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text = "ЧТ"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/heebo_black"
                    android:textColor="#26356B"
                    android:textSize="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text = "ПТ"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/heebo_black"
                    android:textColor="#26356B"
                    android:textSize="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text = "СБ"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/heebo_black"
                    android:textColor="#892555"
                    android:textSize="14dp"/>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id = "@+id/recyclerView"
                android:overScrollMode="never"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

